@{
    Layout = null;
}

@model WebApplication1.Models.login

<head>
    <link href="~/Content/ResetPassword/css/util.css" rel="stylesheet" />
    <link href="~/Content/ResetPassword/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/Content/ResetPassword/css/main.css" rel="stylesheet" />
</head>

<style>
    .text-danger {
        color: red;
        font-weight: bold;
        text-shadow: 0 0 5px #ffffff, 0 0 10px #ffffff, 0 0 20px #ffffff;
    }
</style>

<div class="limiter">
    <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
        <div class="wrap-login100">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "login100-form validate-form" }))
            {
                <span class="login100-form-title p-b-34 p-t-27">
                    forget password
                </span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <p></p>

                <div class="wrap-input100 validate-input" style=" margin-top: 20px !important; ">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input100", type = "email", placeholder = "Email" })
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="container-login100-form-btn">
                    <button id="forgot_btn" type="submit" class="login100-form-btn">
                        Submit
                    </button>
                </div>

                <div class="text-center p-t-90">
                    <a class="txt1" href="index.html">
                        @Html.ActionLink("Sign In", "Login", "Account")
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <script>
     alert('@TempData["ErrorMessage"]');
    </script>
}