@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewBag.Title = "ProfileUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>ProfileUser</h2>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">@Html.ActionLink("Home", "Xuhuong", "Xuhuong")<a href="#"></a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
        @foreach (var item in Model)
        {
            if (Session["UserEmail"]?.ToString().Trim().Equals(item.Email.Trim(), StringComparison.OrdinalIgnoreCase) == true)
            {
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                     class="rounded-circle img-fluid" style="width: 150px;">
                                <h5 class="my-3"> @Html.DisplayFor(modelItem => item.FullName)</h5>
                                <p class="text-muted mb-4"> @Html.DisplayFor(modelItem => item.Address)</p>
                                <p class="text-muted mb-4">
                                    <a href="@Url.Action("EditProfileUser", "Account")" class="btn btn-warning">Edit Profile</a>
                                </p>

                            </div>
                        </div>

                    </div>
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Full Name</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"> @Html.DisplayFor(modelItem => item.FullName)</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Email</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"> @Html.DisplayFor(modelItem => item.Email)</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Phone</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">  @Html.DisplayNameFor(model => model.Phone)</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Address</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"> @Html.DisplayFor(modelItem => item.Address)</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</section>

