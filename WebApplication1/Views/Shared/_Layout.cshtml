                            <i class="fa-solid fa-magnifying-glass search-icon" onclick="submitForm()"></i>
                        </form>
                    </li>
                    <script>
                        function submitForm() {
                            var searchQuery = document.getElementById('searchQuery').value;

                            if (searchQuery) {
                                var actionUrl = '@Url.Action("BanHang", "Xuhuong", new { page = 1, filterType = "" })';
                                actionUrl = actionUrl + "?search=" + encodeURIComponent(searchQuery);
                                document.getElementById('searchForm').action = actionUrl;
                            }
                            document.getElementById('searchForm').submit();
                        }
                    </script>



