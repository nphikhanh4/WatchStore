                    <!-- Search Container -->
                    <style>
                        .search-form {
                            position: relative;
                        }

                        .input-container {
                            position: relative;
                            display: flex;
                            align-items: center;
                            width: 100%;
                        }

                        .search-icon {
                            position: absolute;
                            right: 10px; /* Khoảng cách từ bên phải */
                            font-size: 16px; /* Kích thước icon */
                            color: #999; /* Màu sắc của icon */
                            cursor: pointer; /* Để con trỏ thay đổi khi hover vào icon */
                        }

                        input[type="text"] {
                            padding-right: 30px; /* Dành không gian cho icon bên phải */
                            width: 100%;
                            padding: 8px;
                            font-size: 14px;
                            border: 1px solid #ccc;
                            border-radius: 5px;
                        }
                    </style>
                    <li class="search-container">
                        <form action="@Url.Action("Find", "Xuhuong")" method="get" id="searchForm">
